            -- .filter "lpf" 20 "1*2"
    p "d"
        $ (
            void
            .func
            .fx
            .big 0.2 1
            .send2
        )
        $ stut' 4 (0.25 * "2 4")(
            void
            .(|* l ("2 .. 10" * "0.1" ))
            .(|* gain ("0.2"))
        )
        $ st ("{1*2}%4?" ) 
        $ stack
        [
            ""
            -- ,"fbd" # nt "-2"
