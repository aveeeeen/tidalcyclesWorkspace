        $ (
            void
            .func
            .fx
            .big 0.7 1
            .send2
            .st "1 1 1 1"
        )
        $ stack [
            ""
            ,st "{[0 1] 0 [0 1] [1 [0 1]]}%4" $ slice 16 "2 4 1 4 7 5 3 8" $ la 16 $ "tokyo*4" # n 8 # l 1 # distort ("7" * "0.1")  
            -- ,st "0 1 1 0 1 1 0 1 . *2" $ randslice 16 $ la 8 $ "loopbas" # n "2" # nt ("7" + 12) 
