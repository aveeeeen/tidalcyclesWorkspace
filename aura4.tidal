        p "d2" silence -- clap
        -- p "r" silence -- horrific pads
        p "b" silence -- break sample
        p "p" silence -- bass pads
        p "" silence 
    let fx = 
            void
            .whenmod 8 7 (
                void
                .(# hpf (fast 0.5 $ "50 .. 1" * "50"))
                .(# hpq 0.2)
            )
        func =
            void
